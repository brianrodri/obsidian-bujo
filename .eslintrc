{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "root": true,
    "plugins": ["@typescript-eslint", "eslint-plugin-tsdoc"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended-type-checked",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "tsdoc/syntax": "error"
    }
}
