{
    "name": "obsidian-bujo",
    "version": "0.0.1",
    "description": "Bring the Bullet Journal method to your Obsidian vault.",
    "author": "Brian Rodriguez <brian@brianrodri.com>",
    "license": "MIT",
    "keywords": [
        "obsidian",
        "bullet journal"
    ],
    "main": "dist/main.js",
    "type": "module",
    "scripts": {
        "prepare": "husky install",
        "test": "jest --coverage",
        "watch": "jest --coverage --watchAll",
        "build": "rollup --config rollup.config.js",
        "hotreload": "git submodule init && git submodule update && rollup --config rollup.config.hotreload.js -w",
        "lint": "eslint --config eslint.config.build.js --fix .",
        "typedoc": "typedoc"
    },
    "lint-staged": {
        "**/*": "eslint --config eslint.config.build.js --fix "
    },
    "dependencies": {
        "lodash": "latest",
        "luxon": "latest",
        "obsidian-dataview": "0.5.56",
        "react": "latest",
        "react-dom": "latest"
    },
    "devDependencies": {
        "@eslint/eslintrc": "latest",
        "@eslint/js": "latest",
        "@jest/globals": "latest",
        "@optimize-lodash/rollup-plugin": "latest",
        "@rollup/plugin-commonjs": "latest",
        "@rollup/plugin-node-resolve": "latest",
        "@rollup/plugin-typescript": "latest",
        "@types/eslint": "latest",
        "@types/lodash": "latest",
        "@types/luxon": "latest",
        "@types/node": "latest",
        "@types/react": "latest",
        "@types/react-dom": "latest",
        "@types/ungap__structured-clone": "latest",
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/parser": "latest",
        "@ungap/structured-clone": "latest",
        "builtin-modules": "latest",
        "eslint": "latest",
        "eslint-config-prettier": "latest",
        "eslint-import-resolver-typescript": "latest",
        "eslint-plugin-import": "latest",
        "eslint-plugin-prettier": "latest",
        "eslint-plugin-tsdoc": "latest",
        "husky": "latest",
        "jest": "latest",
        "jest-environment-jsdom": "latest",
        "lint-staged": "latest",
        "obsidian": "latest",
        "prettier": "latest",
        "rollup": "latest",
        "rollup-plugin-copy": "latest",
        "rollup-plugin-typescript2": "latest",
        "rollup-plugin-web-worker-loader": "latest",
        "ts-jest": "latest",
        "ts-node": "latest",
        "tslib": "latest",
        "typedoc": "latest",
        "typedoc-plugin-coverage": "latest",
        "typescript": "latest"
    },
    "//": "TODO(liamcain/obsidian-calendar-ui#20): Needed to get off of a vulnerable svelte version",
    "overrides": {
        "svelte": "^3.59.2"
    }
}
