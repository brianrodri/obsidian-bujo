{
    "name": "obsidian-bujo",
    "version": "0.0.1",
    "description": "Bring the Bullet Journal method to your Obsidian vault.",
    "author": "Brian Rodriguez <brian@brianrodri.com>",
    "license": "MIT",
    "keywords": [
        "obsidian",
        "bullet journal"
    ],
    "main": "dist/main.js",
    "type": "module",
    "scripts": {
        "prepare": "husky",
        "test": "tsc && vitest --coverage",
        "watch": "tsc && vitest watch --coverage",
        "build": "tsc && vite build",
        "hotreload": "git submodule init && git submodule update && vite build --mode development --outDir ./test-vault/.obsidian/plugins/obsidian-bujo/ --watch",
        "lint": "eslint --config eslint.config.build.js --fix .",
        "typedoc": "typedoc"
    },
    "lint-staged": {
        "*": "eslint --config eslint.config.build.js --fix"
    },
    "dependencies": {
        "assert": "^2.1.0",
        "lodash": "^4.17.21",
        "luxon": "^3.5.0",
        "obsidian": "^1.8.7",
        "obsidian-dataview": "^0.5.67",
        "preact": "^10.26.3",
        "react": "npm:@preact/compat",
        "react-dom": "npm:@preact/compat",
        "usehooks-ts": "^3.1.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.0",
        "@eslint/js": "^9.21.0",
        "@preact/preset-vite": "^2.10.1",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/preact": "^3.2.4",
        "@types/assert": "^1.5.11",
        "@types/eslint": "^9.6.1",
        "@types/lodash": "^4.17.15",
        "@types/luxon": "^3.4.2",
        "@types/node": "^22.13.5",
        "@typescript-eslint/eslint-plugin": "^8.25.0",
        "@typescript-eslint/parser": "^8.25.0",
        "@vitest/coverage-istanbul": "^3.0.7",
        "babel-plugin-istanbul": "^7.0.0",
        "eslint": "^9.21.0",
        "eslint-config-prettier": "^10.0.2",
        "eslint-import-resolver-typescript": "^3.8.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.3",
        "eslint-plugin-tsdoc": "^0.4.0",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "jsdom": "^26.0.0",
        "lint-staged": "^15.4.3",
        "prettier": "^3.5.2",
        "typedoc": "^0.27.9",
        "typedoc-plugin-coverage": "^3.4.1",
        "typescript": "^5.7.3",
        "vite": "^6.2.0",
        "vite-plugin-node-polyfills": "^0.23.0",
        "vitest": "^3.0.7"
    },
    "//": "TODO(liamcain/obsidian-calendar-ui#20) is stuck on a vulnerable version of svelte",
    "overrides": {
        "obsidian-calendar-ui": "brianrodri/obsidian-calendar-ui"
    }
}
